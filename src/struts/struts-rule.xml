<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="rule-package" extends="struts-default"  namespace="/rule">
	    <!-- 实体相关配置 -->
		<action name = "*Rule" class = "ruleAction" method = "{1}Rule">
		    <result name="add_rule">/rule/addRule.jsp</result>
		    <result name="rule_item">/rule/itemList.jsp</result>
			<result name="rule_list">/rule/ruleList.jsp</result>
			<result name="show_update">/rule/updateRule.jsp</result>
			<result name="show_rule">/rule/showRule.jsp</result>
		</action>
	</package>
</struts>